@model AppNameTestify.Models.LandlordRegister
@{
    ViewBag.Title = "Register";
}

<div class="row">
    <div class="box">
        <div class="col-lg-12">
            <hr>
            <h2 class="intro-text text-center">
                Registration
                <strong>form</strong>
            </h2>
            <hr>
            <div>
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary(true)
                    <div style="padding-top: 20px">
                        <div>
                            <div class="lblStyle">@Html.LabelFor(m => m.FirstName)</div>
                            <div class="floatLeft"> @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })</div>
                            @Html.ValidationMessageFor(m => m.FirstName)
                        </div>
                        <div class="clearBoth"></div>
                        <div style="padding-top: 20px;">
                            <div class="lblStyle">@Html.LabelFor(m => m.LastName)</div>
                            <div class="floatLeft"> @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })</div>
                            @Html.ValidationMessageFor(m => m.LastName)
                        </div>
                        <div class="clearBoth"></div>
                        <div style="padding-top: 20px;">
                            <div class="lblStyle">@Html.LabelFor(m => m.Email)</div>
                            <div class="floatLeft"> @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })</div>
                            @Html.ValidationMessageFor(m => m.Email)
                        </div>
                        <div class="clearBoth"></div>
                        <div style="padding-top: 20px;">
                            <div class="lblStyle">@Html.LabelFor(m => m.Password)</div>
                            <div class="floatLeft"> @Html.PasswordFor(m => m.Password, new { @class = "form-control" })</div>
                            @Html.ValidationMessageFor(m => m.Password)
                        </div>
                        <div class="clearBoth"></div>
                        <div style="padding-top: 20px;">
                            <div class="lblStyle">@Html.LabelFor(m => m.ConfirmPassword)</div>
                            <div class="floatLeft"> @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })</div>
                            @Html.ValidationMessageFor(m => m.ConfirmPassword)
                        </div>
                        <div class="clearBoth"></div>
                        <div style="padding-top: 20px">
                            <div class="lblStyle">@Html.LabelFor(m => m.PPSNNO)</div>
                            <div class="floatLeft">@Html.TextBoxFor(m => m.PPSNNO, new { @class = "form-control" })</div>
                            @Html.ValidationMessageFor(m => m.PPSNNO)
                        </div>
                        <div class="clearBoth"></div>
                        <div style="padding-top: 20px">
                            <div class="lblStyle"> @Html.LabelFor(m => m.PhoneNo)</div>
                            <div class="floatLeft"> @Html.TextBoxFor(m => m.PhoneNo, new { @class = "form-control" })</div>
                            @Html.ValidationMessageFor(m => m.PhoneNo)
                        </div>
                        <div class="clearBoth"></div>
                        <div style="padding-top: 20px">
                            <div class="lblStyle"> @Html.LabelFor(m => m.Address)</div>
                            <div class="floatLeft">  @Html.TextAreaFor(m => m.Address, new { style = "width: 368px; height: 150px;" })</div>
                            @Html.ValidationMessageFor(m => m.Address)
                        </div>
                        <div class="clearBoth"></div>
                        <div style="padding-top: 20px">
                            <input type="submit" value="Register"  class="btn btn-default" style="width:80px" />
                            <input type="button" value="Cancel" class="btn btn-default" style="width:80px" onclick="document.location.href = $('#cancelUrl').attr('href');" />
                            <a id="cancelUrl" href="@Html.AttributeEncode(Url.Action("Index", "Home"))" style="display:none;"></a>

                        </div>

                    </div>
                }
            </div>
            @section Scripts {
                @Scripts.Render("~/bundles/jquery")
                @Scripts.Render("~/bundles/jqueryval")
            }
        </div>
    </div>
</div>
