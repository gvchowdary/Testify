@model AppNameTestify.Models.ForgotPasswordModel
@{
    ViewBag.Title = "Forgot Password";
}


<div class="row">
    <div class="box">
        <div class="col-lg-12">
            <hr>
            <h2 class="intro-text text-center">
                Forgot Password
                <strong>form</strong>
            </h2>
            <hr>
            <div>
                @using (Html.BeginForm(new { Id = @ViewBag.id }))
                {
                    @Html.ValidationSummary(true)
                    <div style="padding-top: 20px">
                        
                            <div style="width:33.33333333%">
                                @Html.LabelFor(m => m.EmailId)
                                <br />
                                @Html.TextBoxFor(m => m.EmailId, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.EmailId)
                            </div>
                                       
                        <div style="padding-top: 20px">
                            <input type="submit" value="Email Link" class="btn btn-default" style="width:80px" />
                            <input type="button" value="Cancel" class="btn btn-default" style="width:80px" onclick="document.location.href = $('#cancelUrl').attr('href');" />
                            <a id="cancelUrl" href="@Html.AttributeEncode(Url.Action("Index", "Home"))" style="display:none;"></a>

                        </div>
                        
                    </div>
                }
            </div>
            @section Scripts {
                @Scripts.Render("~/bundles/jquery")
                @Scripts.Render("~/bundles/jqueryval")
            }
        </div>
    </div>
</div>





